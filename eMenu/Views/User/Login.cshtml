@model eMenu.Models.ViewModels.LoginViewModel

<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2 style="color:white">
                Login
            </h2>
        </div>
        
        <div class="row">   
            <div class="col-md-12">
                <div class="form_container" style="color:white">
                    <form asp-action="Login">
                        <div class="row form-group">
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <input type="email" class="form-control" placeholder="Email" asp-for="Email">
                                </div>
                                    <div class="col-md-6">
                                        <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                                </div>
                                <div class="col-md-6">
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label class="form-check-label" asp-for="Persistent"></label>
                                    <input class="form-check-input ms-2" type="checkbox" asp-for="Persistent" />
                                </div>
                                    <div class="col-md-6">
                                        <span asp-validation-for="Persistent"></span>
                                    </div>
                            </div>
                            <div class="btn_box">
                                <button type="submit">
                                    Login
                                </button>
                            </div>
                        </div>
                            <div asp-validation-summary="All" class="mt-5"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


